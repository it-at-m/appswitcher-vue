{
  "name": "@muenchen/appswitcher-vue",
  "version": "0.0.1",
  "description": "Vue.js/Vuetify component for appswitcher-server",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/appswitcher.umd.cjs",
  "types": "./dist/components/index.d.ts",
  "module": "./dist/appswitcher.js",
  "exports": {
    ".": {
      "import": "./dist/appswitcher.js",
      "require": "./dist/appswitcher.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "build:demo": "vue-tsc && vite build -c vite.demo.config.ts",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "semantic-release": "semantic-release",
    "lint": "eslint . --fix --ignore-path .gitignore"
  },
  "peerDependencies": {
    "@mdi/font": "> 5",
    "vue": "^3.2.0",
    "vuetify": "^3.0.0"
  },
  "devDependencies": {
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.1",
    "@types/jest": "^29.2.4",
    "@types/node": "^20.1.1",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitest/coverage-v8": "^0.34.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/test-utils": "^2.4.1",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-vue": "^9.14.1",
    "eslint-plugin-vuetify": "^2.0.1",
    "jsdom": "^22.0.0",
    "path": "^0.12.7",
    "prettier": "^3.0.0",
    "sass": "~1.69.0",
    "semantic-release": "^22.0.0",
    "typescript": "^5.0.4",
    "unplugin-fonts": "^1.0.3",
    "vite": "^4.4.9",
    "vite-plugin-dts": "^3.0.0",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-vuetify": "^1.0.0",
    "vitest": "^0.34.0",
    "vue-tsc": "^1.6.5"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-recommended",
      "eslint:recommended",
      "@vue/eslint-config-typescript",
      "prettier",
      "plugin:vuetify/base"
    ]
  }
}
